<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   xmlns:card_view="http://schemas.android.com/tools"
                                   android:layout_width="@dimen/standards_card_width"
                                   android:layout_height="@dimen/standards_card_height"
                                   card_view:cardElevation="0dp"
                                   android:layout_gravity="center"
                                   android:layout_margin="4dp" app:cardBackgroundColor="@android:color/transparent"
                                   app:cardElevation="0dp">

    <TextView
            android:id="@+id/currentStandard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="bold" android:text="US"/>


</androidx.cardview.widget.CardView>
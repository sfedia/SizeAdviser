<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   xmlns:card_view="http://schemas.android.com/tools"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   card_view:cardElevation="0dp"
                                   android:layout_gravity="center"
                                   app:cardBackgroundColor="@color/grey_100"
                                   app:cardElevation="1dp" android:layout_marginBottom="20dp">

    <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cardInternalGrid"
            app:columnCount="3"
            app:rowCount="3" android:paddingBottom="10dp" app:alignmentMode="alignBounds"
    >
        <TextView
                android:id="@+id/itemDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:text="20.01.2021" tools:textAllCaps="false"
                app:layout_column="0" app:layout_row="0" android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="5dp"/>
        <TextView
                android:id="@+id/thisBrand"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" android:text="Nike" tools:textAllCaps="false"
                app:layout_column="0" app:layout_row="1" android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="@dimen/_5sdp"/>
        <TextView
                android:id="@+id/fittingIDHidden"
                android:visibility="gone"
                android:text="xxxx"
        />
        <TextView
                android:text="10.5"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content" android:id="@+id/thisSize"
                android:textSize="18sp"
                app:layout_row="1" app:layout_column="1" android:gravity="right|center_horizontal|end"
                app:layout_gravity="right|end"/>
        <TextView
                android:text="Ideal"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content" android:id="@+id/thisFitString"
                android:textSize="18sp"
                android:textAllCaps="true"
                app:layout_row="1" app:layout_column="2" android:textAlignment="textEnd"
        />
        <ImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:id="@+id/imageView" app:layout_row="2" app:layout_column="0"
                android:background="@drawable/collection_item_placeholder"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" android:visibility="gone"/>
        <ImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_10sdp"
                android:id="@+id/imageViewVoid1" app:layout_row="2" app:layout_column="0"
                android:background="@drawable/collection_item_placeholder"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" android:visibility="invisible"/>
        <ImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:id="@+id/imageView2" app:layout_row="2" app:layout_column="1"
                android:background="@drawable/collection_item_placeholder"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:visibility="gone"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>
        <ImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_10sdp"
                android:id="@+id/imageViewVoid2" app:layout_row="2" app:layout_column="1"
                android:background="@drawable/collection_item_placeholder"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:visibility="invisible"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

        <ImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:id="@+id/imageView3"
                app:layout_row="2"
                app:layout_column="2"
                android:background="@drawable/collection_item_placeholder"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:adjustViewBounds="false"
                android:scaleType="fitCenter" android:visibility="gone"/>
        <ImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_10sdp"
                android:id="@+id/imageViewVoid3"
                app:layout_row="2"
                app:layout_column="2"
                android:background="@drawable/collection_item_placeholder"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:adjustViewBounds="false"
                android:scaleType="fitCenter" android:visibility="invisible"/>
    </androidx.gridlayout.widget.GridLayout>


</androidx.cardview.widget.CardView>